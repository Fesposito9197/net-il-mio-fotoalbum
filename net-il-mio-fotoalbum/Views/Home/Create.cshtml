@model FotoFormModel
@{
    ViewData["title"] = "Inserisci Foto";
    var fotoform = Model;
}
<div class="container text-center mt-3">
    <div class="d-flex justify-content-center">
        <form method="post" asp-controller="Home" asp-action="Create">
            @Html.AntiForgeryToken()
            <div class="mb-3">
                <label asp-for="Foto.Title" class="form-label"></label>
                <input asp-for="Foto.Title" class="form-control" />
                <span asp-validation-for="Foto.Title" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Foto.Description" class="form-label"></label>
                <textarea asp-for="Foto.Description" class="form-control"></textarea>
                <span asp-validation-for="Foto.Description" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Foto.FotoUrl" class="form-label"></label>
                <input type="text" asp-for="Foto.FotoUrl" class="form-control" />
                <span asp-validation-for="Foto.FotoUrl" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Foto.IsVisible" class="form-label"></label>
                <input type="checkbox" asp-for="Foto.IsVisible" class="form-check-input" value="true" />
                <span asp-validation-for="Foto.IsVisible" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <label asp-for="Foto.Categories"></label>
                <select asp-for="SelectedCategories"
                        multiple
                        size="5"
                        class="form-control"
                        asp-items="@fotoform.Categories">
                </select>
            </div>
            <button type="submit" class="btn btn-success">Create</button>
        </form>
    </div>
</div>